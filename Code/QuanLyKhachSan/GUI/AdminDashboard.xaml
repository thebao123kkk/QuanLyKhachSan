<Window x:Class="GUI.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Bảng Điều Khiển Quản Lý" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- (Sao chép toàn bộ Style từ các file XAML trước) -->
        <!-- Modern Button Style - Primary Action -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0A2A57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect x:Name="ButtonShadow" ShadowDepth="1" Direction="270" Color="Black" Opacity="0.2" BlurRadius="5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5F9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#B0C4DE"/>
                                <Setter Property="Foreground" Value="#F0F4F8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style - Destructive Action (e.g., Delete, Lock) -->
        <Style x:Key="DestructiveButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#D9534F"/>
            <!-- Red -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C9302C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#AC2925"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Style - Success Action (e.g., Approve, Unlock) -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#5CB85C"/>
            <!-- Green -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4CAE4C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#449D44"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton
                                x:Name="ToggleButton"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Border x:Name="templateRoot"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow"
                                                      Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#555"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,10,0"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />
                            <Popup
                                x:Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        Background="White"
                                        BorderBrush="#CCC"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Margin="0,5,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                                    </Border.Effect>
                                    <ScrollViewer CanContentScroll="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for ComboBoxItem (the dropdown items) -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F8FF"/>
                                <Setter Property="Foreground" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePickerStyle" TargetType="{x:Type DatePicker}">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DatePicker}">
                        <Border x:Name="templateRoot"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox"
                                                     Grid.Column="0"
                                                     Padding="{TemplateBinding Padding}"
                                                     BorderThickness="0"
                                                     VerticalContentAlignment="Center"/>
                                <Button x:Name="PART_Button"
                                        Grid.Column="1"
                                        Width="30"
                                        Foreground="#555">
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Grid>
                                                <Border Background="Transparent"/>
                                                <Path Data="M 0 0 L 0 14 L 14 14 L 14 0 Z M 1 1 L 13 1 L 13 13 L 1 13 Z M 3 3 L 11 3 L 11 5 L 3 5 Z M 3 6 L 5 6 L 5 8 L 3 8 Z M 6 6 L 8 6 L 8 8 L 6 8 Z M 9 6 L 11 6 L 11 8 L 9 8 Z M 3 9 L 5 9 L 5 11 L 3 11 Z M 6 9 L 8 9 L 8 11 L 6 11 Z M 9 9 L 11 9 L 11 11 L 9 11 Z"
                                                      Fill="{TemplateBinding Foreground}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Width="14" Height="14"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Popup x:Name="PART_Popup"
                                       PlacementTarget="{Binding ElementName=templateRoot}"
                                       StaysOpen="False"
                                       AllowsTransparency="True"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the DataGrid -->
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#E8EEF8"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
        </Style>

        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAF2FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1E5F8"/>
                    <Setter Property="Foreground" Value="#0A2A57"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBlock Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="10,0,10,15"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <!-- Modern TabControl Style -->
        <Style TargetType="{x:Type TabControl}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Background" Value="#E0EAFC"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5,5,0,0"
                                Margin="0,0,2,0">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#0A2A57"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#AABBDD"/>
                                <Setter Property="Foreground" Value="#F0F4F8"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#C8D4E8"/>
                                <Setter Property="Foreground" Value="#0A2A57"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Window Border -->
    <Border CornerRadius="10" MouseDown="Window_MouseDown">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E0EAFC" Offset="0.0" />
                <GradientStop Color="#0A2A57" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="0,0,0,-16">
            <!-- Close Button -->
            <Button Content="&#x2715;" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Margin="0,10,10,0" FontWeight="Bold" Foreground="White" BorderThickness="0" Click="CloseButton_Click" Panel.ZIndex="1">
                <Button.Style>
                    <!-- (Style cho nút Close) -->
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C4C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Main Content Grid -->
            <Border Margin="30" CornerRadius="8" Background="#F4F7FC">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="BẢNG ĐIỀU KHIỂN QUẢN LÝ" Style="{StaticResource HeaderTextStyle}"/>

                    <!-- TabControl for Admin Functions -->
                    <TabControl Grid.Row="1" Margin="10,0">

                        <!-- Tab 1: User Management (SRS 4.6) -->
                        <TabItem Header="Quản Lý Nhân Viên">
                            <Border Background="White" CornerRadius="0,0,5,5" Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Panel: User List -->
                                    <Grid Grid.Column="0" Margin="0,0,15,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Danh Sách Nhân Viên" Style="{StaticResource SubHeaderTextStyle}"/>
                                        <DataGrid Grid.Row="1" x:Name="UsersDataGrid" SelectionChanged="UsersDataGrid_SelectionChanged">
                                            <DataGrid.Columns>
                                                <!-- Cập nhật cột theo DB Schema -->
                                                <DataGridTextColumn Header="Mã NV" Binding="{Binding NhanVienID}" Width="Auto"/>
                                                <DataGridTextColumn Header="Họ Tên" Binding="{Binding HoTen}" Width="*"/>
                                                <DataGridTextColumn Header="Chức Vụ" Binding="{Binding ChucVu}" Width="*"/>
                                                <DataGridTextColumn Header="Điện Thoại" Binding="{Binding DienThoai}" Width="*"/>
                                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                                                <DataGridTextColumn Header="Vai Trò" Binding="{Binding VaiTroID}" Width="*"/>
                                                <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TrangThai}" Width="*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <!-- Lock/Unlock Buttons (SRS 4.6) -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                                            <Button x:Name="LockUserButton" Content="Khóa Tài Khoản" Style="{StaticResource DestructiveButtonStyle}" Margin="0,0,10,0" Click="LockUserButton_Click" Height="34" Width="128"/>
                                            <Button x:Name="UnlockUserButton" Content="Mở Khóa" Style="{StaticResource SuccessButtonStyle}" Click="UnlockUserButton_Click" Width="83"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Right Panel: Add/Edit User -->
                                    <Border Grid.Column="1" Background="#FAFAFB" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1">
                                        <!-- Thêm ScrollViewer để chứa form dài hơn -->
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <StackPanel>
                                                <TextBlock Text="Thêm / Cập Nhật Nhân Viên" Style="{StaticResource SubHeaderTextStyle}"/>

                                                <!-- Cập nhật các trường theo DB Schema -->
                                                <TextBlock Text="Mã Nhân Viên (Tên đăng nhập)" Style="{StaticResource LabelTextStyle}"/>
                                                <TextBox x:Name="NhanVienIDTextBox" Style="{StaticResource ModernTextBoxStyle}"/>

                                                <TextBlock Text="Mật Khẩu (Nhập để đổi)" Style="{StaticResource LabelTextStyle}"/>
                                                <PasswordBox x:Name="PasswordTextBox" Style="{StaticResource ModernPasswordBoxStyle}"/>

                                                <TextBlock Text="Họ Tên" Style="{StaticResource LabelTextStyle}"/>
                                                <TextBox x:Name="HoTenTextBox" Style="{StaticResource ModernTextBoxStyle}"/>

                                                <TextBlock Text="Chức Vụ" Style="{StaticResource LabelTextStyle}"/>
                                                <TextBox x:Name="ChucVuTextBox" Style="{StaticResource ModernTextBoxStyle}"/>

                                                <TextBlock Text="Giới Tính" Style="{StaticResource LabelTextStyle}"/>
                                                <ComboBox x:Name="GioiTinhComboBox" Style="{StaticResource ModernComboBoxStyle}">
                                                    <ComboBoxItem>Nam</ComboBoxItem>
                                                    <ComboBoxItem>Nữ</ComboBoxItem>
                                                    <ComboBoxItem>Khác</ComboBoxItem>
                                                </ComboBox>

                                                <TextBlock Text="Ngày Sinh" Style="{StaticResource LabelTextStyle}"/>
                                                <DatePicker x:Name="NgaySinhDatePicker" Style="{StaticResource ModernDatePickerStyle}"/>

                                                <TextBlock Text="Điện Thoại" Style="{StaticResource LabelTextStyle}"/>
                                                <TextBox x:Name="DienThoaiTextBox" Style="{StaticResource ModernTextBoxStyle}"/>

                                                <TextBlock Text="Email" Style="{StaticResource LabelTextStyle}"/>
                                                <TextBox x:Name="EmailTextBox" Style="{StaticResource ModernTextBoxStyle}"/>

                                                <TextBlock Text="Địa Chỉ" Style="{StaticResource LabelTextStyle}"/>
                                                <TextBox x:Name="DiaChiTextBox" Style="{StaticResource ModernTextBoxStyle}" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                                                <TextBlock Text="Vai Trò (Phân quyền)" Style="{StaticResource LabelTextStyle}"/>
                                                <ComboBox x:Name="RoleComboBox" Style="{StaticResource ModernComboBoxStyle}">
                                                    <ComboBoxItem>Lễ tân</ComboBoxItem>
                                                    <ComboBoxItem>Buồng phòng</ComboBoxItem>
                                                    <ComboBoxItem>Quản lý</ComboBoxItem>
                                                </ComboBox>

                                                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                                    <Button x:Name="AddUserButton" Content="Thêm Mới" Style="{StaticResource ModernButtonStyle}" Click="AddUserButton_Click" Width="76"/>
                                                    <Button x:Name="UpdateUserButton" Content="Cập Nhật" Style="{StaticResource ModernButtonStyle}" Margin="10,0,0,0" Click="UpdateUserButton_Click" Height="36" Width="70"/>
                                                </StackPanel>
                                                <Button x:Name="ClearFormButton" Content="Làm Mới Form" Margin="0,10,0,0" Click="ClearFormButton_Click"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Border>
                        </TabItem>

                        <!-- Tab 2: Approval Management (SRS 4.2.2) -->
                        <TabItem Header="Phê Duyệt Yêu Cầu">
                            <Border Background="White" CornerRadius="0,0,5,5" Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Yêu Cầu Chờ Phê Duyệt (SRS 4.2.2)" Style="{StaticResource SubHeaderTextStyle}"/>

                                    <DataGrid Grid.Row="1" x:Name="ApprovalDataGrid">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Mã Yêu Cầu" Binding="{Binding RequestId}" Width="Auto"/>
                                            <DataGridTextColumn Header="Loại Yêu Cầu" Binding="{Binding RequestType}" Width="*"/>
                                            <DataGridTextColumn Header="Nhân Viên" Binding="{Binding StaffName}" Width="*"/>
                                            <DataGridTextColumn Header="Mã Booking" Binding="{Binding BookingCode}" Width="*"/>
                                            <DataGridTextColumn Header="Chi Tiết" Binding="{Binding Details}" Width="2*"/>
                                            <DataGridTextColumn Header="Ngày Yêu Cầu" Binding="{Binding RequestDate, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                        <Button x:Name="ApproveButton" Content="Phê Duyệt" Style="{StaticResource SuccessButtonStyle}" Margin="10,0,0,0" Click="ApproveButton_Click" Height="37" Width="102"/>
                                        <Button x:Name="RejectButton" Content="Từ Chối" Style="{StaticResource DestructiveButtonStyle}" Margin="10,0,0,0" Click="RejectButton_Click" Width="87"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

