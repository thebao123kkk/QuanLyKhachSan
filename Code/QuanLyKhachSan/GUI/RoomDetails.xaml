<Window x:Class="GUI.RoomDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Chi Tiết Đặt Phòng" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Modern Button Style - Primary Action -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0A2A57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect x:Name="ButtonShadow" ShadowDepth="1" Direction="270" Color="Black" Opacity="0.2" BlurRadius="5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5F9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#B0C4DE"/>
                                <Setter Property="Foreground" Value="#F0F4F8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style - Secondary Action -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#0A2A57"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6873"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4E5A65"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BCC3C9"/>
                    <Setter Property="Foreground" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                CornerRadius="5" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="false" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton
                                x:Name="ToggleButton"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Border x:Name="templateRoot" 
                                                Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow"
                                                      Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#555"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,10,0"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />
                            <Popup
                                x:Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        Background="White"
                                        BorderBrush="#CCC"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Margin="0,5,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                                    </Border.Effect>
                                    <ScrollViewer CanContentScroll="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for ComboBoxItem (the dropdown items) -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F8FF"/>
                                <Setter Property="Foreground" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePickerStyle" TargetType="{x:Type DatePicker}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DatePicker}">
                        <Border x:Name="border" 
                                CornerRadius="5" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <DatePicker Name="PART_Button" SelectedDate="2025-10-20"/>


                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the DataGrid -->
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#E8EEF8"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
        </Style>

        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAF2FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1E5F8"/>
                    <Setter Property="Foreground" Value="#0A2A57"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple TextBlock Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="10,0,10,15"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="TotalTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#D9534F"/>
            <!-- A contrasting color for total -->
            <Setter Property="Margin" Value="0,15,0,0"/>
        </Style>

    </Window.Resources>

    <!-- Main Window Border with Gradient Background -->
    <Border CornerRadius="10" MouseDown="Window_MouseDown">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E0EAFC" Offset="0.0" />
                <GradientStop Color="#0A2A57" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Close Button -->
            <Button Content="&#x2715;" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Margin="0,10,10,0" FontWeight="Bold" Foreground="White" BorderThickness="0" Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C4C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Main Content Grid -->
            <Border Margin="30" CornerRadius="8" Background="#F4F7FC">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="CHI TIẾT ĐẶT PHÒNG" Style="{StaticResource HeaderTextStyle}"/>

                    <!-- Main Content Area -->
                    <Grid Grid.Row="1" Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <!-- Main info and services -->
                            <ColumnDefinition Width="1*"/>
                            <!-- Booking extension and summary -->
                        </Grid.ColumnDefinitions>

                        <!-- Left Column: Room/Guest Info & Services -->
                        <Grid Grid.Column="0" Margin="0,0,20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Room & Guest Info -->
                            <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Phòng 101 - Standard" FontSize="20" FontWeight="Bold" Foreground="#0A2A57" Margin="0,0,0,10"/>
                                    <TextBlock Style="{StaticResource LabelTextStyle}" Text="Khách hàng:"/>
                                    <TextBlock Style="{StaticResource InfoTextStyle}" x:Name="GuestNameText" Text="Nguyễn Văn A"/>

                                    <TextBlock Style="{StaticResource LabelTextStyle}" Text="Thời gian lưu trú:"/>
                                    <TextBlock Style="{StaticResource InfoTextStyle}" x:Name="StayDurationText" Text="25/10/2025 - 27/10/2025 (2 đêm)"/>

                                    <TextBlock Style="{StaticResource LabelTextStyle}" Text="Tình trạng:"/>
                                    <TextBlock Style="{StaticResource InfoTextStyle}" x:Name="StatusText" Text="Đang ở" Foreground="#28A745"/>
                                </StackPanel>
                            </Border>

                            <!-- Add Services Section (SRS 4.2.3) -->
                            <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Ghi Nhận Dịch Vụ" Style="{StaticResource SubHeaderTextStyle}"/>

                                    <!-- Add Service Form -->
                                    <WrapPanel Grid.Row="1" Margin="0,10,0,10">
                                        <StackPanel Margin="0,0,10,5">
                                            <TextBlock Text="Dịch vụ" Style="{StaticResource LabelTextStyle}"/>
                                            <ComboBox x:Name="ServiceComboBox" MinWidth="200" Style="{StaticResource ModernComboBoxStyle}">
                                                <ComboBoxItem IsSelected="True">Nước suối</ComboBoxItem>
                                                <ComboBoxItem>Coca-Cola</ComboBoxItem>
                                                <ComboBoxItem>Bia 333</ComboBoxItem>
                                                <ComboBoxItem>Giặt ủi (kg)</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,10,5">
                                            <TextBlock Text="Số lượng" Style="{StaticResource LabelTextStyle}"/>
                                            <TextBox x:Name="ServiceQuantityTextBox" MinWidth="80" Text="1" Style="{StaticResource ModernTextBoxStyle}"/>
                                        </StackPanel>
                                        <Button x:Name="AddServiceButton" Content="Thêm" Style="{StaticResource ModernButtonStyle}" VerticalAlignment="Bottom" Click="AddServiceButton_Click" Height="30" Width="80" Margin="0,0,0,6" FontSize="14"/>
                                    </WrapPanel>

                                    <!-- Services DataGrid -->
                                    <DataGrid Grid.Row="2" x:Name="ServicesDataGrid" Margin="0,10,0,0">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Tên Dịch Vụ" Binding="{Binding ServiceName}" Width="2*"/>
                                            <DataGridTextColumn Header="Số Lượng" Binding="{Binding Quantity}" Width="Auto"/>
                                            <DataGridTextColumn Header="Đơn Giá" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="*"/>
                                            <DataGridTextColumn Header="Thành Tiền" Binding="{Binding Total, StringFormat={}{0:N0}}" Width="*"/>
                                            <DataGridTextColumn Header="Thời Gian" Binding="{Binding Timestamp, StringFormat='dd/MM HH:mm'}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Right Column: Extend Booking & Summary -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Extend Booking Section (SRS 4.2.2) -->
                            <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Gia Hạn Phòng" Style="{StaticResource SubHeaderTextStyle}"/>
                                    <TextBlock Style="{StaticResource LabelTextStyle}" Text="Chọn ngày trả phòng mới:"/>
                                    <DatePicker x:Name="NewCheckoutDatePicker" Style="{StaticResource ModernDatePickerStyle}" Margin="0,0,0,10"/>
                                    <Button x:Name="CheckAvailabilityButton" Content="Kiểm Tra Khả Dụng" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10" Click="CheckAvailabilityButton_Click" Height="30" FontSize="14"/>
                                    <TextBlock x:Name="AvailabilityText" Style="{StaticResource InfoTextStyle}" Text="Vui lòng chọn ngày và kiểm tra." Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Summary & Actions -->
                            <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Tổng Quan Thanh Toán" Style="{StaticResource SubHeaderTextStyle}"/>

                                    <TextBlock Style="{StaticResource LabelTextStyle}" Text="Tiền phòng:" Margin="0,10,0,0"/>
                                    <TextBlock Style="{StaticResource InfoTextStyle}" x:Name="RoomFeeText" Text="2,000,000 VNĐ"/>

                                    <TextBlock Style="{StaticResource LabelTextStyle}" Text="Tiền dịch vụ:"/>
                                    <TextBlock Style="{StaticResource InfoTextStyle}" x:Name="ServiceFeeText" Text="50,000 VNĐ"/>

                                    <TextBlock Style="{StaticResource LabelTextStyle}" Text="Đã thanh toán/cọc:"/>
                                    <TextBlock Style="{StaticResource InfoTextStyle}" x:Name="PaidText" Text="1,000,000 VNĐ" Foreground="#28A745"/>

                                    <TextBlock Style="{StaticResource TotalTextStyle}" Text="Tổng tạm tính (còn lại):" Margin="0,10,0,0"/>
                                    <TextBlock Style="{StaticResource TotalTextStyle}" x:Name="TotalDueText" Text="1,050,000 VNĐ" FontSize="22"/>
                                    <Grid Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Button x:Name="SaveChangesButton"
                                            Content="Lưu Thay Đổi"
                                            Style="{StaticResource ModernButtonStyle}"
                                            Click="SaveChangesButton_Click"
                                            Grid.Column="0" FontSize="14"
                                            Margin="5" />

                                        <Button x:Name="GoToCheckoutButton"
                                            Content="Thanh Toán"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Click="GoToCheckoutButton_Click"
                                            Grid.Column="1" FontSize="14"
                                            Margin="5" />
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

