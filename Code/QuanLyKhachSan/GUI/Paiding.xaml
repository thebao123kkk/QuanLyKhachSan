<Window x:Class="GUI.Paiding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Thanh Toán &amp; Hóa Đơn" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- (Sao chép toàn bộ Style từ RoomDetails.xaml hoặc SearchRoom.xaml) -->
        <!-- Modern Button Style - Primary Action -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0A2A57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect x:Name="ButtonShadow" ShadowDepth="1" Direction="270" Color="Black" Opacity="0.2" BlurRadius="5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5F9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#B0C4DE"/>
                                <Setter Property="Foreground" Value="#F0F4F8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style - Secondary Action -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#0A2A57"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6873"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4E5A65"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BCC3C9"/>
                    <Setter Property="Foreground" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Style - Danger/Print -->
        <Style x:Key="PrintButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#1A73E8"/>
            <!-- Blue for print -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A90E2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1558B0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Style - VAT Invoice -->
        <Style x:Key="VatButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#D9534F"/>
            <!-- Reddish for VAT -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8706C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C9302C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                CornerRadius="5" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="false" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton
                                x:Name="ToggleButton"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Border x:Name="templateRoot" 
                                                Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow"
                                                      Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#555"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,10,0"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />
                            <Popup
                                x:Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        Background="White"
                                        BorderBrush="#CCC"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Margin="0,5,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                                    </Border.Effect>
                                    <ScrollViewer CanContentScroll="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for ComboBoxItem -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F8FF"/>
                                <Setter Property="Foreground" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the DataGrid -->
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#E8EEF8"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
        </Style>

        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAF2FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1E5F8"/>
                    <Setter Property="Foreground" Value="#0A2A57"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBlock Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="10,0,10,15"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="TotalSummaryLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,5,10,5"/>
        </Style>

        <Style x:Key="TotalSummaryValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="GrandTotalLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#D9534F"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,10,10,5"/>
        </Style>

        <Style x:Key="GrandTotalValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#D9534F"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

    </Window.Resources>

    <!-- Main Window Border -->
    <Border CornerRadius="10" MouseDown="Window_MouseDown">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E0EAFC" Offset="0.0" />
                <GradientStop Color="#0A2A57" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Close Button -->
            <Button Content="&#x2715;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="30" Margin="1040,10,0,0" FontWeight="Bold" Foreground="White" BorderThickness="0" Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C4C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Main Content Grid -->
            <Border Margin="30" CornerRadius="8" Background="#F4F7FC">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="THANH TOÁN &amp; HÓA ĐƠN" Style="{StaticResource HeaderTextStyle}"/>

                    <!-- Main Content Area -->
                    <Grid Grid.Row="1" Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <!-- Chi tiết hóa đơn -->
                            <ColumnDefinition Width="1*"/>
                            <!-- Tóm tắt và Thanh toán -->
                        </Grid.ColumnDefinitions>

                        <!-- Left Column: Invoice Details -->
                        <Grid Grid.Column="0" Margin="0,0,20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Guest Info -->
                            <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Phòng 101 - Nguyễn Văn A" FontSize="20" FontWeight="Bold" Foreground="#0A2A57" Margin="0,0,0,10"/>
                                    <TextBlock Style="{StaticResource InfoTextStyle}" x:Name="GuestNameText" Text="Booking #BK-20251025-001"/>
                                    <TextBlock Style="{StaticResource InfoTextStyle}" x:Name="StayDurationText" Text="Lưu trú: 25/10/2025 - 27/10/2025 (2 đêm)"/>
                                </StackPanel>
                            </Border>

                            <!-- Details DataGrid (Room fees, Services) -->
                            <DataGrid Grid.Row="1" x:Name="InvoiceDetailsGrid">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mô Tả" Binding="{Binding Description}" Width="2*"/>
                                    <DataGridTextColumn Header="Số Lượng" Binding="{Binding Quantity}" Width="Auto"/>
                                    <DataGridTextColumn Header="Đơn Giá" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="*"/>
                                    <DataGridTextColumn Header="Thành Tiền" Binding="{Binding Total, StringFormat={}{0:N0}}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Discount Code (SRS 4.4.1) -->
                            <Border Grid.Row="2" Background="White" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1" Margin="0,15,0,0">
                                <StackPanel>
                                    <TextBlock Text="Áp Dụng Mã Giảm Giá" Style="{StaticResource LabelTextStyle}"/>
                                    <WrapPanel>
                                        <TextBox x:Name="DiscountCodeTextBox" MinWidth="200" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,10,0"/>
                                        <Button x:Name="ApplyDiscountButton" Content="Áp Dụng" Style="{StaticResource SecondaryButtonStyle}" Click="ApplyDiscountButton_Click" Width="84"/>
                                    </WrapPanel>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Right Column: Summary & Payment -->
                        <Grid Grid.Column="1">
                            <Border Background="White" CornerRadius="5" Padding="20" BorderBrush="#EEE" BorderThickness="1" Margin="0,0,0,-15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <!-- Summary -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Payment -->
                                        <RowDefinition Height="*"/>
                                        <!-- Print Actions -->
                                    </Grid.RowDefinitions>

                                    <!-- Summary (SRS 4.4.1) -->
                                    <StackPanel Grid.Row="0">
                                        <TextBlock Text="Tóm Tắt Hóa Đơn" Style="{StaticResource SubHeaderTextStyle}"/>
                                        <Grid Margin="0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- THÊM CÁC DÒNG NÀY ĐỂ SỬA LỖI CHỒNG CHÉO -->
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <!-- Tiền phòng -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- Dịch vụ -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- Giảm giá -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- VAT -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- Đã thanh toán -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- Còn lại -->
                                            </Grid.RowDefinitions>

                                            <!-- Dòng 0: Tiền phòng -->
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Tổng tiền phòng:" Style="{StaticResource TotalSummaryLabelStyle}"/>
                                            <TextBlock Grid.Column="1" Grid.Row="0" x:Name="RoomFeeText" Text="2,000,000" Style="{StaticResource TotalSummaryValueStyle}"/>

                                            <!-- Dòng 1: Dịch vụ -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Tổng tiền dịch vụ:" Style="{StaticResource TotalSummaryLabelStyle}"/>
                                            <TextBlock Grid.Column="1" Grid.Row="1" x:Name="ServiceFeeText" Text="60,000" Style="{StaticResource TotalSummaryValueStyle}"/>

                                            <!-- Dòng 2: Giảm giá -->
                                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Giảm giá:" Style="{StaticResource TotalSummaryLabelStyle}"/>
                                            <TextBlock Grid.Column="1" Grid.Row="2" x:Name="DiscountText" Text="- 0" Style="{StaticResource TotalSummaryValueStyle}" Foreground="#28A745"/>

                                            <!-- Dòng 3: VAT -->
                                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Phí (VAT, v.v.):" Style="{StaticResource TotalSummaryLabelStyle}"/>
                                            <TextBlock Grid.Column="1" Grid.Row="3" x:Name="VatText" Text="0" Style="{StaticResource TotalSummaryValueStyle}"/>

                                            <!-- Dòng 4: Đã thanh toán -->
                                            <TextBlock Grid.Column="0" Grid.Row="4" Text="Đã thanh toán (cọc):" Style="{StaticResource TotalSummaryLabelStyle}" Foreground="#0A2A57"/>
                                            <TextBlock Grid.Column="1" Grid.Row="4" x:Name="PaidText" Text="- 1,000,000" Style="{StaticResource TotalSummaryValueStyle}" Foreground="#0A2A57"/>

                                            <!-- Dòng 5: Còn lại -->
                                            <TextBlock Grid.Column="0" Grid.Row="5" Text="CÒN LẠI:" Style="{StaticResource GrandTotalLabelStyle}"/>
                                            <TextBlock Grid.Column="1" Grid.Row="5" x:Name="TotalDueText" Text="1,060,000" Style="{StaticResource GrandTotalValueStyle}"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Record Payment (SRS 4.4.2) -->
                                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                                        <TextBlock Text="Ghi Nhận Thanh Toán (SRS 4.4.2)" Style="{StaticResource SubHeaderTextStyle}"/>
                                        <TextBlock Text="Phương thức" Style="{StaticResource LabelTextStyle}"/>
                                        <ComboBox x:Name="PaymentMethodComboBox" Style="{StaticResource ModernComboBoxStyle}" Margin="0,0,0,10">
                                            <ComboBoxItem IsSelected="True">Tiền mặt</ComboBoxItem>
                                            <ComboBoxItem>Thẻ tín dụng</ComboBoxItem>
                                            <ComboBoxItem>Chuyển khoản</ComboBoxItem>
                                        </ComboBox>

                                        <TextBlock Text="Số tiền thanh toán" Style="{StaticResource LabelTextStyle}"/>
                                        <TextBox x:Name="PaymentAmountTextBox" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,10"/>

                                        <Button x:Name="RecordPaymentButton" Content="Ghi Nhận Thanh Toán" Style="{StaticResource ModernButtonStyle}" Click="RecordPaymentButton_Click" Height="38"/>
                                    </StackPanel>

                                    <!-- Print Actions (SRS 4.4.1, 4.4.3) -->
                                    <StackPanel Grid.Row="2" VerticalAlignment="Bottom" Margin="0,20,0,0">
                                        <!-- Sử dụng Grid để đặt 2 nút In kề nhau -->
                                        <Grid Height="35">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Bỏ (SRS...) khỏi Content để ngắn gọn hơn -->
                                            <Button Grid.Column="0" x:Name="PrintProformaButton" Content="In Phiếu &#xD;&#xA;Tạm Tính" Style="{StaticResource PrintButtonStyle}" Margin="0,3,5,0" Click="PrintProformaButton_Click"/>
                                            <Button Grid.Column="1" x:Name="PrintVatButton" Content="Xuất Hóa Đơn" Style="{StaticResource VatButtonStyle}" Margin="5,3,10,0" Click="PrintVatButton_Click" RenderTransformOrigin="0.5,0.5">
                                                <Button.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform/>
                                                        <SkewTransform/>
                                                        <RotateTransform Angle="0"/>
                                                        <TranslateTransform/>
                                                    </TransformGroup>
                                                </Button.RenderTransform>
                                            </Button>
                                            <Button Grid.Column="1" x:Name="FinalizeCheckoutButton" Content="Hoàn Tất" Style="{StaticResource SecondaryButtonStyle}" Margin="92,3,0,0" IsEnabled="False" Click="FinalizeCheckoutButton_Click" Grid.ColumnSpan="2" Width="NaN"/>

                                        </Grid>

                                        <!-- Nút Hoàn tất check-out nằm riêng ở dưới -->
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>


