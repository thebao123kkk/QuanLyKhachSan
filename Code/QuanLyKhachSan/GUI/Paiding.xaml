<Window x:Class="GUI.Paiding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Thanh Toán &amp; Hóa Đơn" Height="804" Width="1142"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize" WindowState="Maximized"
        Background="#FFECECEC">

    <Window.Resources>
        <!-- (Sao chép toàn bộ Style từ RoomDetails.xaml hoặc SearchRoom.xaml) -->
        <!-- Modern Button Style - Primary Action -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0A2A57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect x:Name="ButtonShadow" ShadowDepth="1" Direction="270" Color="Black" Opacity="0.2" BlurRadius="5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5F9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#B0C4DE"/>
                                <Setter Property="Foreground" Value="#F0F4F8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style - Secondary Action -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#0A2A57"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6873"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4E5A65"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BCC3C9"/>
                    <Setter Property="Foreground" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Style - Danger/Print -->
        <Style x:Key="PrintButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#1A73E8"/>
            <!-- Blue for print -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A90E2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1558B0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Style - VAT Invoice -->
        <Style x:Key="VatButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#D9534F"/>
            <!-- Reddish for VAT -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8706C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C9302C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                CornerRadius="5" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="false" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton
                                x:Name="ToggleButton"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Border x:Name="templateRoot" 
                                                Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow"
                                                      Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#555"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,10,0"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />
                            <Popup
                                x:Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        Background="White"
                                        BorderBrush="#CCC"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Margin="0,5,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                                    </Border.Effect>
                                    <ScrollViewer CanContentScroll="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for ComboBoxItem -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F8FF"/>
                                <Setter Property="Foreground" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the DataGrid -->
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#E8EEF8"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
        </Style>

        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAF2FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1E5F8"/>
                    <Setter Property="Foreground" Value="#0A2A57"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBlock Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="10,0,10,15"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="TotalSummaryLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,5,10,5"/>
        </Style>

        <Style x:Key="TotalSummaryValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="GrandTotalLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#D9534F"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,10,10,5"/>
        </Style>

        <Style x:Key="GrandTotalValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#D9534F"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

    </Window.Resources>

    <!-- Main Window Border -->
    <Border CornerRadius="10" MouseDown="Window_MouseDown">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E0EAFC" Offset="0.0" />
                <GradientStop Color="#0A2A57" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Close Button -->
            <Button Content="&#x2715;" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Margin="0,10,10,0" FontWeight="Bold" Foreground="White" BorderThickness="0" Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C4C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Main Content Grid -->
            <Border Margin="30" CornerRadius="8" Background="#F4F7FC">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="THANH TOÁN &amp; HÓA ĐƠN" Style="{StaticResource HeaderTextStyle}"/>

                    <!-- Main Content Area -->
                    <Grid Grid.Row="1" Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <!-- Chi tiết hóa đơn -->
                            <ColumnDefinition Width="1*"/>
                            <!-- Tóm tắt và Thanh toán -->
                        </Grid.ColumnDefinitions>

                        <!-- Left Column: Invoice Details -->
                        <Grid Grid.Column="0" Margin="0,0,20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Guest Info -->
                            <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock x:Name="TitleRoomCustomerText" Text="Phòng 101 - Nguyễn Văn A" FontSize="20" FontWeight="Bold" Foreground="#0A2A57" Margin="0,0,0,10"/>
                                    <TextBlock Style="{StaticResource InfoTextStyle}" x:Name="BookingIdText" Text="Booking #BK-20251025-001"/>
                                    <TextBlock Style="{StaticResource InfoTextStyle}" x:Name="StayDurationText" Text="Lưu trú: 25/10/2025 - 27/10/2025 (2 đêm)"/>
                                    <CheckBox Name="AllPhong"
                  Content="Tất cả phòng khách đang ở"
                  Margin="0,10,0,0"
                  FontWeight="SemiBold"
                  Foreground="#0A2A57"
                  Checked="HienAllPhongDangO_Checked"
                  Unchecked="HienAllPhongDangO_Unchecked"/>
                                </StackPanel>
                            </Border>

                            <!-- Details DataGrid (Room fees, Services) -->
                            <DataGrid Grid.Row="1" x:Name="InvoiceDetailsGrid">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mô Tả" Binding="{Binding Description}" Width="2*"/>
                                    <DataGridTextColumn Header="Số Lượng" Binding="{Binding Quantity}" Width="Auto"/>
                                    <DataGridTextColumn Header="Đơn Giá" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="*"/>
                                    <DataGridTextColumn Header="Thành Tiền" Binding="{Binding Total, StringFormat={}{0:N0}}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Discount Code (SRS 4.4.1) -->
                            <Border Grid.Row="2" Background="White" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1" Margin="0,15,0,0">
                                <StackPanel>
                                    <TextBlock Text="Áp Dụng Mã Giảm Giá" Style="{StaticResource LabelTextStyle}"/>
                                    <WrapPanel>
                                        <TextBox x:Name="txtMaGiamGia" MinWidth="200" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,10,0"/>
                                        <Button x:Name="ApMaGiamGiabtn" Content="Áp Dụng" Style="{StaticResource SecondaryButtonStyle}" Click="ApMaGiamGiaBtn_Click" Width="84"/>
                                    </WrapPanel>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Right Column: Summary & Payment -->
                        <Grid Grid.Column="1">
                            <Border Background="White" CornerRadius="5" Padding="20" BorderBrush="#EEE" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <!-- Summary -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Payment -->
                                        <RowDefinition Height="*"/>
                                        <!-- Print Actions -->
                                    </Grid.RowDefinitions>

                                    <!-- Summary (SRS 4.4.1) -->
                                    <StackPanel Grid.Row="0">
                                        <TextBlock Text="Tóm Tắt Hóa Đơn" Style="{StaticResource SubHeaderTextStyle}"/>
                                        <StackPanel Grid.Row="0" Margin="0,0,0,0">
                                            <Grid Margin="0,10"
          HorizontalAlignment="Left">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Tổng tiền phòng -->
                                                <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Tổng tiền phòng:"
                   Style="{StaticResource TotalSummaryLabelStyle}"
                   Margin="0,5,20,5"/>

                                                <TextBlock Grid.Row="0" Grid.Column="1"
                   x:Name="TongTienPhong"
                   Style="{StaticResource TotalSummaryValueStyle}"
                   Margin="0,5,0,5"/>

                                                <!-- Tổng tiền dịch vụ -->
                                                <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Tổng tiền dịch vụ:"
                   Style="{StaticResource TotalSummaryLabelStyle}"
                   Margin="0,5,20,5"/>

                                                <TextBlock Grid.Row="1" Grid.Column="1"
                   x:Name="TongTienDichVu"
                   Style="{StaticResource TotalSummaryValueStyle}"
                   Margin="0,5,0,5"/>

                                                <!-- Giảm giá -->
                                                <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Giảm giá:"
                   Style="{StaticResource TotalSummaryLabelStyle}"
                   Margin="0,5,20,5"/>

                                                <TextBlock Grid.Row="2" Grid.Column="1"
                   x:Name="GiamGia"
                   Style="{StaticResource TotalSummaryValueStyle}"
                   Margin="0,5,0,5"
                   Foreground="#28A745"/>

                                                <!-- VAT -->
                                                <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Phí (VAT, v.v.):"
                   Style="{StaticResource TotalSummaryLabelStyle}"
                   Margin="0,5,20,5"/>

                                                <TextBlock Grid.Row="3" Grid.Column="1"
                   x:Name="PhiVAT"
                   Style="{StaticResource TotalSummaryValueStyle}"
                   Margin="0,5,0,5"/>

                                                <!-- Đã thanh toán -->
                                                <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Đã thanh toán (cọc):"
                   Style="{StaticResource TotalSummaryLabelStyle}"
                   Margin="0,5,20,5"/>

                                                <TextBlock Grid.Row="4" Grid.Column="1"
                   x:Name="DaThanhToan"
                   Style="{StaticResource TotalSummaryValueStyle}"
                   Margin="0,5,0,5"/>

                                                <!-- Còn lại -->
                                                <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="CÒN LẠI:"
                   Style="{StaticResource GrandTotalLabelStyle}"
                   Margin="0,10,20,5"/>

                                                <TextBlock Grid.Row="5" Grid.Column="1"
                   x:Name="ConLai"
                   Style="{StaticResource GrandTotalValueStyle}"
                   Margin="0,10,0,5"/>
                                            </Grid>
                                        </StackPanel>

                                    </StackPanel>

                                    <!-- Record Payment (SRS 4.4.2) -->
                                    <StackPanel Grid.Row="1" Margin="0,20,0,0">
                                        <TextBlock  Text="Ghi Nhận Thanh Toán" Style="{StaticResource SubHeaderTextStyle}"/>
                                        <TextBlock Margin="0,10,0,5" Text="Phương thức" Style="{StaticResource LabelTextStyle}"/>
                                        <ComboBox x:Name="PaymentMethodComboBox" Style="{StaticResource ModernComboBoxStyle}" Margin="0,0,0,10">
                                            <ComboBoxItem IsSelected="True">Tiền mặt</ComboBoxItem>
                                            <ComboBoxItem>Thẻ tín dụng</ComboBoxItem>
                                            <ComboBoxItem>Chuyển khoản</ComboBoxItem>
                                        </ComboBox>

                                        <TextBlock Text="Số tiền thanh toán" Style="{StaticResource LabelTextStyle}"/>
                                        <TextBox x:Name="SoTienThanhToantb" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,10"/>

                                        <Button x:Name="GhiNhanThanhToanButton" Content="Ghi Nhận Thanh Toán" Style="{StaticResource ModernButtonStyle}" Height="38" Click="GhiNhanThanhToan_Click"/>
                                    </StackPanel>

                                    <!-- Print Actions (SRS 4.4.1, 4.4.3) -->
                                  
                                    <StackPanel Grid.Row="2" VerticalAlignment="Top" Margin="0,41,0,0">
                                        <Button x:Name="PrintProformaButton"
                                        Content="In Phiếu Tạm Tính"
                                        Style="{StaticResource PrintButtonStyle}"
                                        Height="48"
                                        Width="{Binding ElementName=GhiNhanThanhToanButton, Path=ActualWidth}"
                                        HorizontalAlignment="Left"
                                        Click="PrintProformaButton_Click"/>
                                     </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>


