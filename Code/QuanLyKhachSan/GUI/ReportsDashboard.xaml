<Window x:Class="GUI.ReportsDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Báo Cáo &amp; Thống Kê" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- (Sao chép toàn bộ Style từ các file XAML trước) -->
        <!-- Modern Button Style - Primary Action -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0A2A57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect x:Name="ButtonShadow" ShadowDepth="1" Direction="270" Color="Black" Opacity="0.2" BlurRadius="5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5F9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the DataGrid -->
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#E8EEF8"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
        </Style>

        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAF2FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1E5F8"/>
                    <Setter Property="Foreground" Value="#0A2A57"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern DatePicker Style (Copy from RoomDetails) -->
        <!-- (Bạn cần sao chép Style cho DatePicker vào đây nếu chưa có) -->

        <!-- TextBlock Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="10,0,10,15"/>
        </Style>

        <!-- Modern TabControl Style -->
        <Style TargetType="{x:Type TabControl}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Background" Value="#E0EAFC"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5,5,0,0"
                                Margin="0,0,2,0">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#0A2A57"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#AABBDD"/>
                                <Setter Property="Foreground" Value="#F0F4F8"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#C8D4E8"/>
                                <Setter Property="Foreground" Value="#0A2A57"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Window Border -->
    <Border CornerRadius="10" MouseDown="Window_MouseDown">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E0EAFC" Offset="0.0" />
                <GradientStop Color="#0A2A57" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Close Button -->
            <Button Content="&#x2715;" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Margin="0,10,10,0" FontWeight="Bold" Foreground="White" BorderThickness="0" Click="CloseButton_Click" Panel.ZIndex="1">
                <Button.Style>
                    <!-- (Style cho nút Close) -->
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C4C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Main Content Grid -->
            <Border Margin="30" CornerRadius="8" Background="#F4F7FC">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="BÁO CÁO &amp; THỐNG KÊ" Style="{StaticResource HeaderTextStyle}"/>

                    <!-- TabControl for Reports -->
                    <TabControl Grid.Row="1" Margin="10,0">

                        <!-- Tab 1: Revenue Report (SRS 5) -->
                        <TabItem Header="Báo Cáo Doanh Thu">
                            <Border Background="White" CornerRadius="0,0,5,5" Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Filters -->
                                    <Border Grid.Row="0" Background="#FAFAFB" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1" Margin="0,0,0,15">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Từ ngày:" VerticalAlignment="Center" Margin="5,0"/>
                                            <DatePicker x:Name="StartDatePicker" Width="150" Margin="5,0" SelectedDate="2025-10-01"/>
                                            <TextBlock Text="Đến ngày:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                            <DatePicker x:Name="EndDatePicker" Width="150" Margin="5,0" SelectedDate="2025-10-27"/>
                                            <Button x:Name="FilterButton" Content="Lọc Báo Cáo" Margin="20,0,0,0" Style="{StaticResource ModernButtonStyle}" Click="FilterButton_Click" Width="80"/>
                                            <Button x:Name="ExportExcelButton" Content="Xuất Excel" Margin="10,0,0,0" Style="{StaticResource ModernButtonStyle}" Click="ExportExcelButton_Click" Width="87"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Chart (SRS 4.5) - Đã sửa theo mẫu -->
                                    <lvc:CartesianChart Grid.Row="1" 
                                                        x:Name="RevenueChart" 
                                                        Series="{Binding RevenueSeries}" 
                                                        LegendLocation="Right" 
                                                        Height="280">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Ngày" Labels="{Binding RevenueLabels}"/>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Doanh thu (VNĐ)" LabelFormatter="{Binding RevenueFormatter}"/>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>
                                </Grid>
                            </Border>
                        </TabItem>

                        <!-- Tab 2: Occupancy Report (SRS 5) -->
                        <TabItem Header="Báo Cáo Công Suất">
                            <Border Background="White" CornerRadius="0,0,5,5" Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Thống kê công suất phòng (Tỷ lệ lấp đầy theo loại phòng)" FontSize="18" FontWeight="SemiBold" Foreground="#0A2A57" Margin="0,0,0,15"/>

                                    <!-- Biểu đồ tròn (SRS 4.5) - Không phải CartesianChart, giữ nguyên -->
                                    <lvc:PieChart Grid.Row="1" x:Name="OccupancyChart" Series="{Binding OccupancySeries}" LegendLocation="Bottom" DataClick="PieChart_DataClick">
                                        <lvc:PieChart.ChartLegend>
                                            <lvc:DefaultLegend BulletSize="20"/>
                                        </lvc:PieChart.ChartLegend>
                                        <lvc:PieChart.DataTooltip>
                                            <lvc:DefaultTooltip BulletSize="15"/>
                                        </lvc:PieChart.DataTooltip>
                                    </lvc:PieChart>
                                </Grid>
                            </Border>
                        </TabItem>

                        <!-- Tab 3: Service Report (SRS 5) -->
                        <TabItem Header="Top Dịch Vụ">
                            <Border Background="White" CornerRadius="0,0,5,5" Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Top Dịch Vụ Được Sử Dụng Nhiều Nhất (Theo Doanh Thu)" FontSize="18" FontWeight="SemiBold" Foreground="#0A2A57" Margin="0,0,0,15"/>

                                    <!-- Biểu đồ ngang (Bar chart) (SRS 4.5) - Đã sửa theo mẫu -->
                                    <lvc:CartesianChart Grid.Row="1" 
                                                        Series="{Binding ServiceSeries}" 
                                                        LegendLocation="Right" 
                                                        Height="280">
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Dịch vụ" Labels="{Binding ServiceLabels}"/>
                                        </lvc:CartesianChart.AxisY>
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Doanh thu (VNĐ)" LabelFormatter="{Binding ServiceFormatter}"/>
                                        </lvc:CartesianChart.AxisX>
                                    </lvc:CartesianChart>
                                </Grid>
                            </Border>
                        </TabItem>

                        <!-- Tab 4: Staff Performance Report (SRS 5) -->
                        <TabItem Header="Hiệu Suất Nhân Viên">
                            <Border Background="White" CornerRadius="0,0,5,5" Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Báo Cáo Hiệu Suất Nhân Viên (Doanh thu theo nhân viên)" FontSize="18" FontWeight="SemiBold" Foreground="#0A2A57" Margin="0,0,0,15"/>

                                    <!-- Bảng thống kê (SRS 4.5) -->
                                    <DataGrid Grid.Row="1" x:Name="StaffDataGrid">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Mã Nhân Viên" Binding="{Binding StaffId}" Width="Auto"/>
                                            <DataGridTextColumn Header="Tên Nhân Viên" Binding="{Binding StaffName}" Width="2*"/>
                                            <DataGridTextColumn Header="Số Lượng Booking" Binding="{Binding BookingCount}" Width="*"/>
                                            <DataGridTextColumn Header="Doanh Thu Mang Về (VNĐ)" Binding="{Binding TotalRevenue, StringFormat={}{0:N0}}" Width="2*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

