<Window x:Class="GUI.HousekeepingDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Bảng Điều Khiển Buồng Phòng"
        Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize" WindowState="Maximized"
        Background="#F4F7FC">
    <Window.Resources>
        <!-- (Sao chép toàn bộ Style từ các file XAML trước) -->
        <!-- Modern Button Style - Primary Action -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0A2A57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect x:Name="ButtonShadow" ShadowDepth="1" Direction="270" Color="Black" Opacity="0.2" BlurRadius="5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5F9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#B0C4DE"/>
                                <Setter Property="Foreground" Value="#F0F4F8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style - Success Action (e.g., Approve, Unlock, Clean) -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#5CB85C"/>
            <!-- Green -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4CAE4C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#449D44"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Style - Warning Action (e.g., Maintenance) -->
        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F0AD4E"/>
            <!-- Orange/Yellow -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEA236"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#EC971F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton
                                x:Name="ToggleButton"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Border x:Name="templateRoot"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow"
                                                      Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#555"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,10,0"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="templateRoot" Property="BorderBrush" Value="#4A90E2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />
                            <Popup
                                x:Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        Background="White"
                                        BorderBrush="#CCC"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Margin="0,5,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                                    </Border.Effect>
                                    <ScrollViewer CanContentScroll="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for ComboBoxItem (the dropdown items) -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F8FF"/>
                                <Setter Property="Foreground" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the DataGrid -->
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#E8EEF8"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
        </Style>

        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDE2E5"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAF2FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1E5F8"/>
                    <Setter Property="Foreground" Value="#0A2A57"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBlock Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="10,0,10,15"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0A2A57"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </Window.Resources>

    <!-- Main Window Border -->
    <Border CornerRadius="10" MouseDown="Window_MouseDown">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E0EAFC" Offset="0.0" />
                <GradientStop Color="#0A2A57" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Close Button -->
            <Button Content="&#x2715;" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Margin="0,10,10,0" FontWeight="Bold" Foreground="White" BorderThickness="0" Click="CloseButton_Click" Panel.ZIndex="1">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C4C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Main Content Grid -->
            <Border Margin="30" CornerRadius="8" Background="#F4F7FC">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="BẢNG ĐIỀU KHIỂN BUỒNG PHÒNG" Style="{StaticResource HeaderTextStyle}"/>

                    <!-- Main Layout Grid (List on Left, Actions on Right) -->
                    <Grid Grid.Row="1" Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel: Room List (To-Do List) -->
                        <Grid Grid.Column="0" Margin="0,0,15,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Filter -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Bộ lọc trạng thái:" Style="{StaticResource LabelTextStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="FilterComboBox" Style="{StaticResource ModernComboBoxStyle}" Width="200" SelectionChanged="FilterComboBox_SelectionChanged">
                                    <ComboBoxItem IsSelected="True">Xem tất cả</ComboBoxItem>
                                    <ComboBoxItem>Chỉ xem phòng Bẩn</ComboBoxItem>
                                    <ComboBoxItem>Chỉ xem phòng Đang ở</ComboBoxItem>
                                    <ComboBoxItem>Chỉ xem phòng Sạch</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                            <!-- Room List -->
                            <DataGrid Grid.Row="1" x:Name="RoomsDataGrid" SelectionChanged="RoomsDataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Số Phòng" Binding="{Binding SoPhong}" Width="Auto"/>
                                    <DataGridTextColumn Header="Loại Phòng" Binding="{Binding LoaiPhong}" Width="*"/>
                                    <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TrangThai}" Width="*"/>
                                    <DataGridTextColumn Header="Ghi Chú" Binding="{Binding GhiChu}" Width="2*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                        <!-- Right Panel: Actions for Selected Room -->
                        <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="ActionsPanel" IsEnabled="False">
                                    <TextBlock x:Name="SelectedRoomTextBlock" Text="Vui lòng chọn một phòng" Style="{StaticResource SubHeaderTextStyle}"/>
                                    <TextBlock x:Name="CurrentStatusTextBlock" Text="Trạng Thái: N/A" Style="{StaticResource LabelTextStyle}" FontSize="14" Margin="0,0,0,15"/>

                                    <!-- Action 1: Mark as Clean (SRS 4.3) -->
                                    <Border Background="#F4F7FC" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                                        <StackPanel>
                                            <TextBlock Text="1. Cập Nhật Trạng Thái Dọn Dẹp" Style="{StaticResource LabelTextStyle}" FontSize="16"/>
                                            <Button x:Name="MarkCleanButton" Content="Hoàn thành Dọn (Sạch)" Style="{StaticResource SuccessButtonStyle}" Click="MarkCleanButton_Click" Height="34" IsEnabled="False"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Action 2: Confirm for Checkout (SRS 4.2.1) -->
                                    <Border Background="#F4F7FC" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                                        <StackPanel>
                                            <TextBlock Text="2. Xác Nhận" Style="{StaticResource LabelTextStyle}" FontSize="16"/>
                                            <TextBlock Text="Ghi chú (Minibar/Thiệt hại):" Style="{StaticResource LabelTextStyle}" Margin="0,10,0,5"/>
                                            <TextBox x:Name="ConfirmationNotesTextBox" Style="{StaticResource ModernTextBoxStyle}" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Button x:Name="ConfirmCheckoutButton" Content="Gửi Xác Nhận" Style="{StaticResource ModernButtonStyle}" Margin="0,10,0,0" Click="ConfirmCheckoutButton_Click" Height="34" IsEnabled="True"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Action 3: Report Maintenance (SRS 4.3) -->
                                    <Border Background="#FFFBF0" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                                        <StackPanel>
                                            <TextBlock Text="3. Báo Cáo Bảo Trì" Style="{StaticResource LabelTextStyle}" FontSize="16"/>
                                            <TextBlock Text="Nội dung sự cố / bảo trì:" Style="{StaticResource LabelTextStyle}" Margin="0,10,0,5"/>
                                            <TextBox x:Name="MaintenanceNotesTextBox" Style="{StaticResource ModernTextBoxStyle}" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Button x:Name="ReportMaintenanceButton" Content="Gửi Báo Cáo Bảo Trì" Style="{StaticResource WarningButtonStyle}" Margin="0,10,0,0" Click="ReportMaintenanceButton_Click" Height="34" IsEnabled="True"/>
                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
