<Window x:Class="GUI.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:GUI"
        xmlns:globalization="clr-namespace:System.Globalization;assembly=mscorlib"
        Language="vi-VN"
        mc:Ignorable="d"
        Title="Tạo Đơn Đặt Phòng" Height="750" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize" WindowState="Maximized"
        Background="#FFF2F2F2">
    

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Giả sử các style được định nghĩa trong file MainWindow.xaml có thể được tham chiếu ở đây -->
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
            <SolidColorBrush x:Key="PrimaryGreen" Color="#22C55E"/>
            <SolidColorBrush x:Key="TextPrimary" Color="#1F2937"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#6B7280"/>
            <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>

            <Style x:Key="BaseButton" TargetType="Button">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
                <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            </Style>
            <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
                <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
            </Style>

            <Style TargetType="Label">
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border" CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="DatePicker">
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style x:Key="ModernButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#0A2A57"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.3"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                        CornerRadius="6"  
                                SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#133D82"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#081A38"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10" MouseDown="Window_MouseDown">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E0EAFC" Offset="0.0" />
                <GradientStop Color="#0A2A57" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Close Button -->
            <Button Content="&#x2715;"  
                    HorizontalAlignment="Right"  
                    VerticalAlignment="Top"  
                    Width="30" Height="30"  
                    Margin="0,10,10,0"  
                    FontWeight="Bold"
                    Foreground="White"
                    BorderThickness="0"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C4C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Border Margin="30" CornerRadius="8" Background="#FDFEFF">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT PANEL: CUSTOMER AND BOOKING INFO -->
                    <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="25" Margin="0,0,15,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Thông tin Đặt phòng" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,20"/>

                                <!-- Customer Search -->
                                <GroupBox Header="Tìm kiếm Khách hàng" FontWeight="SemiBold" Margin="0,0,0,15">
                                    <StackPanel>
                                        <Label Content="Nhập SĐT hoặc Email để tìm"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                <!-- LỚP GỢI Ý (CHỮ MỜ) -->
                                                <TextBlock Name="txtSearch_Suggest"
                                                           Padding="14"
                                                           Margin="0"
                                                           IsHitTestVisible="False"
                                                           Foreground="#66000000"
                                                           FontStyle="Italic"
                                                           VerticalAlignment="Center" 
                                                           Panel.ZIndex="1"/>

                                                <!-- Ô NHẬP THỰC TẾ -->
                                                <TextBox Name="txtSearchCustomer"
                                                         TextChanged="txtSearchCustomer_TextChanged"
                                                         KeyDown="txtSearchCustomer_KeyDown"
                                                         Padding="10"
                                                         Panel.ZIndex="0"/>
                                            </Grid>
                                            <Button Grid.Column="1" Content="Tìm" Style="{StaticResource PrimaryButton}" Margin="10,0,0,0" Background="#FF1A53B2"/>
                                        </Grid>
                                        <CheckBox Name="chkNewCustomer" Content="Khách hàng mới" Margin="0,10,0,0" Checked="chkKhachHangMoi_Checked" Unchecked="chkKhachHangMoi_Unchecked"/>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Customer Details -->
                                <GroupBox Header="Thông tin Khách hàng" FontWeight="SemiBold" Margin="0,0,0,15">
                                    <StackPanel IsEnabled="{Binding IsChecked, ElementName=chkNewCustomer}">
                                        <Label Content="Họ và Tên"/>
                                        <TextBox Name="txtTenKH" IsEnabled="False" />
                                        <Label Content="Số Điện Thoại"  Margin="0,10,0,0"/>
                                        <TextBox Name="txtSoDienThoai" IsEnabled="False" />
                                        <Label Content="Email" Margin="0,10,0,0"/>
                                        <TextBox Name="txtEmail" IsEnabled="False" />
                                        <Label Content="Địa chỉ" Margin="0,10,0,0"/>
                                        <TextBox Name="txtDiaChi" IsEnabled="False" />
                                    </StackPanel>
                                </GroupBox>

                                <!-- Company Details -->
                                <GroupBox Header="Thông tin Công ty (nếu có)" FontWeight="SemiBold" Margin="0,0,0,15">
                                    <StackPanel>
                                        <Label Content="Tên Công ty"/>
                                        <TextBox Name="txtTenCongTy" IsEnabled="False"/> 
                                        <Label Content="Mã số thuế" Margin="0,10,0,0"/>
                                        <TextBox Name="txtMaSoThue" IsEnabled="False"/>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Booking Details -->
                                <GroupBox Header="Chi tiết Đặt phòng" FontWeight="SemiBold">
                                    <StackPanel>
                                        <Label Content="Người lớn" Margin="0,10,0,0"/>
                                        <TextBox Name="txtNguoiLon" Text="1"/>
                                        <Label Content="Trẻ em" Margin="0,10,0,0"/>
                                        <TextBox Name="txtTreEm" Text="0"/>
                                        <Label Content="Tiền cọc (VNĐ)"/>
                                        <TextBox Name="txtTienCoc" Text="0" />
                                        <Label Content="Ghi chú" Margin="0,10,0,0"/>
                                        <TextBox Name="txtGhiChu" Text="Khách lẻ" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                                    </StackPanel>
                                </GroupBox>

                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- RIGHT PANEL: ROOM SELECTION -->
                    <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="25">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Room Filters -->
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="Chọn phòng" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>
                                <Border Background="#F9FAFB" CornerRadius="5" Padding="15" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <Label Content="Ngày nhận phòng"/>
                                                <DatePicker Name="dpNgayNhan" DisplayDateStart="{x:Static sys:DateTime.Today}" SelectedDate="{x:Static sys:DateTime.Today}" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                <Label Content="Ngày trả phòng"/>
                                                <DatePicker Name="dpNgayTra" DisplayDateStart="{x:Static sys:DateTime.Today}"/>
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                            <StackPanel Margin="0,0,10,0">
                                                <Label Content="Loại phòng"/>
                                                <ComboBox x:Name="cbLoaiPhong" Width="150" SelectionChanged="cbLoaiPhong_SelectionChanged"/>
                                            </StackPanel>
                                            <StackPanel Margin="10,0,0,0">
                                                <Label Content="Tầng"/>
                                                <ComboBox x:Name="cbTang" Width="100" SelectionChanged="cbTang_SelectionChanged"/>
                                            </StackPanel>
                                            <Button Content="Kiểm tra phòng trống" Style="{StaticResource PrimaryButton}" VerticalAlignment="Bottom" Margin="20,0,0,0" Background="#FF1A53B2"
                                                    Click="BtnKiemTraPhong_Click"/>
                                        </StackPanel>

                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <!-- Tương tự CheckRoomStatus, hiển thị các phòng trống ở đây -->
                                            <!-- Danh sách phòng trống -->
                                            
                                        </ScrollViewer>
                                    </StackPanel>
                                </Border>
                                
                            </StackPanel>

                            <!-- Room List & Selected Rooms -->
                            <!-- ================== KHU VỰC DANH SÁCH PHÒNG & PHÒNG ĐÃ CHỌN ================== -->

                            <Grid Grid.Row="1" Margin="0,20,0,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <!-- 2/3: phòng trống -->
                                    <RowDefinition Height="1*" />
                                    <!-- 1/3: phòng đã chọn -->
                                </Grid.RowDefinitions>

                                <!-- ====================== DANH SÁCH PHÒNG TRỐNG ====================== -->
                                <Border Grid.Row="0">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="White"
                      Margin="0,0,0,10">

                                        <DataGrid x:Name="DataGridPhong"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True"
                      ColumnWidth="*"
                      Background="White">

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Số phòng" Binding="{Binding SoPhong}" Width="*" />
                                                <DataGridTextColumn Header="Loại phòng" Binding="{Binding TenLoai}" Width="*" />
                                                <DataGridTextColumn Header="Sức chứa" Binding="{Binding SucChua}" Width="*" />
                                                <DataGridTextColumn Header="Giá/Đêm" Binding="{Binding GiaCoBan, StringFormat={}{0:N0} đ}" Width="*" />

                                                <DataGridTemplateColumn Header="Hành động" Width="110">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Content="Thêm"
                                        Width="80"
                                        Height="28"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="BtnThemPhong_Click"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                            </DataGrid.Columns>

                                        </DataGrid>

                                    </ScrollViewer>
                                </Border>

                                <!-- ====================== PHÒNG ĐÃ CHỌN ====================== -->
                                <Border Grid.Row="1" Margin="0,10,0,0">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="White">

                                        <DataGrid x:Name="dgSelectedRooms"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      ColumnWidth="*"
                      EnableRowVirtualization="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      Background="White">

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Mã Phòng" Binding="{Binding RoomId}" Width="*" />
                                                <DataGridTextColumn Header="Loại Phòng" Binding="{Binding RoomType}" Width="*" />
                                                <DataGridTextColumn Header="Đơn giá/Đêm" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="*" />
                                                <DataGridTextColumn Header="Thành tiền" Binding="{Binding Total, StringFormat={}{0:N0}}" Width="*" />

                                                <DataGridTemplateColumn Header="Hành Động" Width="80">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Content="Xóa"
                                        Width="60"
                                        Height="26"
                                        Background="#EF4444"
                                        Foreground="White"
                                        Click="BtnXoaPhong_Click"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>

                                        </DataGrid>

                                    </ScrollViewer>
                                </Border>

                            </Grid>


                            <!-- Footer with Summary and Actions -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,0,0">
                                <StackPanel VerticalAlignment="Center" Margin="0,0,20,0" HorizontalAlignment="Right">
                                    <TextBlock Text="Tổng cộng:" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Name="tbTongTien" Text="0,000,000 VNĐ" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryGreen}"/>
                                </StackPanel>
                                <Button Content="Hoàn tất Đặt phòng" Style="{StaticResource SuccessButton}" Padding="20,12" Click="BtnDatPhong_Click"/>
                            </StackPanel>

                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

